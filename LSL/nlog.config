<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      throwConfigExceptions="true">

    <variable name="logLayout"
              value="[${date:format=yyyy\-MM\-dd HH\:mm\:ss}] [${logger:shortName=true}|${level:uppercase=true}] ${message} ${exception:format=tostring}"/>
    <targets>
        <target name="asyncFile" xsi:type="AsyncWrapper">
            <target name="log_file" xsi:type="File"
                    fileName="${basedir}/Logs/${shortdate}/${shortdate}.log"
                    layout="${logLayout}"
                    archiveFileName="${basedir}/archives/${shortdate}-{#####}.log"
                    archiveAboveSize="102400"
                    archiveNumbering="Sequence"
                    keepFileOpen="true" 
                    encoding="utf-8"
                    openFileCacheTimeout="30"/>
        </target>
        <target name="logconsole" xsi:type="Console"
                encoding="utf-8"
                layout="${logLayout}"/>
        <target xsi:type="DebugSystem" name="logDebug" layout="${logLayout}" />
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="logconsole" />
        <logger name="*" minlevel="Debug" writeTo="asyncFile" />
        <logger name="*" minlevel="Debug" writeTo="logDebug" />
    </rules>
</nlog>