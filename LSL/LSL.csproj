  </ItemGroup>

  
  <ItemGroup>
    <Compile Remove="Assets\MyCard.cs" />
    <Compile Remove="Services\MyCard.axaml.cs" />
    <Compile Remove="ViewModels\ErrorPopupViewModel.cs" />
