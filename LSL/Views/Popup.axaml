<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="650"
             x:Class="LSL.Views.Popup">
	<Grid>
		<Grid Name="Cover" Background="{Binding	PopupVM.Color}" Opacity="0.3"/>
		<Border Width="600"
				Name="PopupBorder"
				Padding="10"
				VerticalAlignment="Center"
				Background="White"
				BorderThickness="4"
				BorderBrush="{Binding PopupVM.Color}"
				CornerRadius="10">
			<DockPanel>
				<TextBlock Name="Head" DockPanel.Dock="Top" Margin="10" FontWeight="Bold" FontSize="17" Text="{Binding PopupVM.Title}" />
				<TextBlock Name="Message" DockPanel.Dock="Top" Margin="10" Text="{Binding PopupVM.Content}" TextWrapping="Wrap" />
				<ItemsRepeater Name="Buttons" ItemsSource="{Binding PopupVM.Buttons}" DockPanel.Dock="Bottom">
					<ItemsRepeater.ItemTemplate>
						<DataTemplate>
							<Button Content="{Binding Text}" Command="{Binding Command}" CommandParameter="{Binding Parameter}" Margin="10"/>
						</DataTemplate>
					</ItemsRepeater.ItemTemplate>
				</ItemsRepeater>
			</DockPanel>
		</Border>
	</Grid>
	<UserControl.Transitions>
		<Transitions>
			<DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
		</Transitions>
	</UserControl.Transitions>
</UserControl>
