<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="650"
             x:Class="LSL.Views.Popup">
	<UserControl.Resources>
		<SolidColorBrush x:Key="PopupColor"/>
	</UserControl.Resources>
	<Grid>
		<Grid Name="Cover" Background="Red" Opacity="0.3"/>
		<Border Width="600"
				Name="PopupBorder"
				Padding="10"
				VerticalAlignment="Center"
				Background="White"
				BorderThickness="4"
				BorderBrush="Red"
				CornerRadius="10">
			<DockPanel>
				<TextBlock Name="Head" DockPanel.Dock="Top" Margin="10" FontWeight="Bold" FontSize="17"/>
				<TextBlock Name="Intro" DockPanel.Dock="Top" Margin="10"/>
				<TextBlock Name="Message" DockPanel.Dock="Top" Margin="10"/>
				<Button Name="Confirm" Classes="right" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Width="130" Height="30"/>
				<Button Name="Cancel" Classes="right" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Width="130" Height="30"/>
			</DockPanel>
		</Border>
	</Grid>
</UserControl>
