<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LSL.Views.SplashView">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" RowDefinitions="*,20,20" Margin="20">
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0">
            <Image Source="/Assets/icon.ico" Width="190" Height="190" Margin="10" DockPanel.Dock="Left" />
            <Image Source="/Assets/LSL-WORD.png" Width="300" DockPanel.Dock="Bottom" HorizontalAlignment="Center" />
            <Image Source="/Assets/LSL-Chinese.png" Width="250" DockPanel.Dock="Bottom"
                   HorizontalAlignment="Center" />
        </DockPanel>
        <TextBlock Text="Copyright © 2024 Orange-Icepop 橙子冰棒" Grid.Row="1" HorizontalAlignment="Center" />
        <TextBlock Text="柠方MC服务器启动器 Lime Server Launcher" Grid.Row="2" HorizontalAlignment="Center" />
    </Grid>
</UserControl>