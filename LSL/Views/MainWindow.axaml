<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:LSL.Views"
        xmlns:vm="using:LSL.ViewModels"
        x:DataType="vm:InitializationVM"
		Width="1200" Height="650"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="650"
        x:Class="LSL.Views.MainWindow"
        Icon="/Assets/icon.ico"
        Title="Lime Server Launcher"
		WindowStartupLocation="CenterScreen"
		MinHeight="400"
		MinWidth="1000">

	<Grid>
		<TransitioningContentControl Name="MainViewControl" Content="{Binding MainWindowView}">
			<TransitioningContentControl.PageTransition>
				<CompositePageTransition>
					<CrossFade Duration="0:00:00.5"/>
				</CompositePageTransition>
			</TransitioningContentControl.PageTransition>
		</TransitioningContentControl>
	</Grid>
</Window>

