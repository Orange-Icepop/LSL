<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="600"
             x:Class="LSL.Views.Download.DownloadLeft">
	<DockPanel Width="150">
		<TextBlock DockPanel.Dock="Top" Text="服务器核心" Margin="10,10,0,0" Foreground="Gray"/>
		<Button DockPanel.Dock="Top" Content="自动下载" Classes="left" Command="{Binding RightViewCmd}" CommandParameter="AutoDown"/>
		<Button DockPanel.Dock="Top" Content="手动下载" Classes="left" Command="{Binding RightViewCmd}" CommandParameter="ManualDown"/>
		<TextBlock DockPanel.Dock="Top" Text="其他资源" Margin="10,10,0,0" Foreground="Gray"/>
		<Button DockPanel.Dock="Top" Content="Mod下载" Classes="left" Command="{Binding RightViewCmd}" CommandParameter="ModDown"/>
		<Button Classes="right" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Width="130" Height="40" Command="{Binding DownloadConfigCmd}">下载源设置</Button>
	</DockPanel>
</UserControl>
